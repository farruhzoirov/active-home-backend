generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  firstName     String?
  lastName      String?
  email    String?   @unique
  image    String?
  role     Role   @default(USER)
  gender   Gender?
  phone    String?
  address  String?
  country  String?
  isDeleted Boolean @default(false)

  authProvider AuthProvider?
  providerId  String?
  telegramUserName    String?   @unique
  telegramId  BigInt?   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  MANAGER
  ADMIN
  SUPER_ADMIN
}

 enum Gender {
  MALE
  FEMALE
}

enum AuthProvider {
  LOCAL
  GOOGLE
  TELEGRAM
}